rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Secure user-specific book data
    match /books/{bookId} {
      // Allow read, update, delete only if the user ID in the request matches the document's userId field
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow create only if the user ID in the request matches the userId field being set in the new document
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    // Add rules for other collections here if needed
  }
}
