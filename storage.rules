rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow reads and writes only by the authenticated user who owns the files
    // Files are stored under paths like 'audiobooks/{userId}/...' or 'audiobooks_generated/{userId}/...'
    match /{prefix=**}/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Example: If you needed public read access for generated audio (adjust path if needed)
    // match /audiobooks_generated/{userId}/{allPaths=**} {
    //   allow read; // Anyone can read generated audio
    //   allow write: if request.auth != null && request.auth.uid == userId; // Only owner can write/overwrite
    // }
  }
}
